generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PublishStatus {
  pending
  published
  removed
}

enum MovieType {
  Series
  Movie
}

model Admin {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  otp String?
  otpExpiry DateTime?
  verified Boolean  @default(false)
  movies    Movie[]
} 

model Movie {
  id              Int           @id @default(autoincrement())
  title           String
  slug            String        @unique
  description     String
  releaseYear     Int
  country         String
  resolution      String        @default("HD")
  movieUrl        String
  type            MovieType     @default(Movie)
  posterPotrait   String?
  posterLandscape String?
  publish_status  PublishStatus @default(pending)
  admin_id        Int
  admin           Admin         @relation(fields: [admin_id], references: [id])
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  movieGenres     MovieGenres[]
  translatorId    Int
  translator      Translators   @relation(fields: [translatorId], references: [id])
  download Int @default(0)
  views Int @default(0)
  // movieTranslators MovieTranslators[]
}

model Genres {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  movieGenres MovieGenres[]
}

model Translators {
  id   Int    @id @default(autoincrement())
  name String @unique

  // movieTranslators MovieTranslators[]
  movies Movie[]
}

